<% if (success && success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert" style="border-radius: 20px;">
        <%= success %>
        <button 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close">
        </button>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" style="border-radius: 20px;">
        <%= error %>
        <button 
            type="button" 
            class="btn-close" 
            data-bs-dismiss="alert" 
            aria-label="Close">
        </button>
    </div>
<% } %>

<% if (info && info.length) { %>
<div class="alert alert-info alert-dismissible fade show col-6 offset-3" role="alert" style="border-radius: 20px;">
    <%= info %>
    <button 
        type="button" 
        class="btn-close" 
        data-bs-dismiss="alert" 
        aria-label="Close">
    </button>
</div>
<% } %>