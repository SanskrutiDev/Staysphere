<% layout('layouts/boilerplate') %>
    <div class="row mt-3">
        <h1 class="col-6 mt-5 offset-3">SignUp on StaySphere</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class=" mb-3">
                    <label for="username" class="form-label">username</label>
                    <input name="username" id="username" type="text" class="new form-control" required/>
                    <div class="valid-feedback">Looks good</div>
                  </div>
                  <div class=" mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" type="email" class="new form-control" required/>
                  </div>
                  <div class=" mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" class="new form-control" required/>
                  </div>
            <button class="btn btn-dark add-btn mt-3 ">Sing up</button>
                  
            
            </form>
        </div>
    </div>